{
  "variables": {
    "iso_url": "https://software-download.microsoft.com/download/pr/18362.30.190401-1528.19h1_release_svc_refresh_CLIENTENTERPRISEEVAL_OEMRET_x64FRE_en-us.iso",
    "iso_checksum": "743fc483bb8bf1901c0534a0ae15208a5a72a3c5",
    "iso_checksum_type": "sha1",
    "disk_size": "61440",
    "memory_size": "4096",
    "cpus": "4",
    "vm_name": "windows_10",
    "headless": "true",
    "autounattend": "./answer_files/10/Autounattend.xml",
    "qemu_binary": "qemu-system-x86_64"
  },
  "builders": [
    {
      "type": "qemu",
      "accelerator":"kvm",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "headless": "{{user `headless`}}",
      "cpus": "{{ user `cpus`}}",
      "qemu_binary": "{{ user `qemu_binary`}}",
      "memory": "{{ user `memory_size`}}",
      "boot_wait": "5s",
      "format": "qcow2",
      "disk_size": "{{user `disk_size`}}",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "communicator": "winrm",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_insecure": "true",
      "winrm_use_ssl": "false",
      "winrm_timeout": "120m",
      "floppy_files": [
        "{{user `autounattend`}}",
        "./scripts/fixnetwork.ps1",
        "./scripts/microsoft-updates.bat",
        "./scripts/win-updates.ps1",
        "./scripts/install-choco.ps1",
        "./scripts/install-misc.bat",
        "./scripts/redhat-cert.cer",
        "./scripts/enable-winrm.ps1",
        "./drivers/"
      ],
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "qemuargs": [
        ["--cpu", "host"],
        ["-vga", "qxl"]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "windows-shell",
      "remote_path": "c:/Windows/Temp/script.bat",
      "execute_command": "{{.Vars}} cmd /c C:/Windows/Temp/script.bat",
      "scripts": [
        "./scripts/disable-auto-logon.bat",
        "./scripts/enable-rdp.bat",
        "./scripts/compile-dotnet-assemblies.bat",
        "./scripts/install-misc.bat",
        "./scripts/compact.bat"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "builds/{{user `vm_name`}}.box",
      "vagrantfile_template": "Vagrantfile-windows.template",
      "keep_input_artifact": true
    }
  ]
}